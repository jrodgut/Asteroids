<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.example.asteroids"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.example.asteroids.activities.Asteroids"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.example.asteroids.activities.About"
            android:label="@string/about"
            android:theme="@style/AppDialogTheme" >
        </activity>
        <activity android:name="org.example.asteroids.activities.Preferences" >
        </activity>
        <activity android:name="org.example.asteroids.activities.Ranking" >
        </activity>
        <activity
            android:name="org.example.asteroids.activities.Game"
            android:label="@string/title_activity_game" 
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        </activity>
    </application>

</manifest>